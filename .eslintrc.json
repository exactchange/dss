{
  "extends": "eslint:recommended",

  "env": {
    "es2020": true
  },

  "ignorePatterns": [
    "**/static/js/*.js"
  ],

  "globals": {
    "require": true,
    "process": true
  },

  "parser": "@babel/eslint-parser",

  "rules": {

    // Practices

    "accessor-pairs": [2, {
      "getWithoutSet": false,
      "setWithoutGet": true
    }],
    "block-scoped-var": 1,
    "consistent-return": 0,
    "curly": 0,
    "default-case": 0,
    "dot-notation": 1,
    "eqeqeq": [2, "smart"],
    "guard-for-in": 1,
    "no-alert": 2,
    "no-caller": 2,
    "no-case-declarations": 1,
    "no-div-regex": 1,
    "no-else-return": 1,
    "no-empty-pattern": 1,
    "no-eq-null": 1,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 1,
    "no-floating-decimal": 0,
    "no-implicit-coercion": [0, {
      "boolean": true,
      "number": true,
      "string": true
    }],
    "no-implied-eval": 2,
    "no-invalid-this": 0,
    "no-iterator": 2,
    "no-labels": 0,
    "no-lone-blocks": 1,
    "no-loop-func": 2,
    "no-magic-numbers": 1,
    "no-multi-spaces": 2,
    "no-multi-str": 1,
    "no-native-reassign": 2,
    "no-new-func": 0,
    "no-new-wrappers": 2,
    "no-new": 0,
    "no-octal-escape": 2,
    "no-param-reassign": 2,
    "no-process-env": 0,
    "no-proto": 2,
    "no-prototype-builtins": 0,
    "no-redeclare": 2,
    "no-return-assign": 0,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 2,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-void": 1,

    // Variables

    "init-declarations": [0, "always"],
    "no-catch-shadow": 1,
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow-restricted-names": 2,
    "no-unused-vars": 1,
    "no-undef": [0, "never"],

    // Preferences

    "array-bracket-spacing": [0, "always"],
    "block-spacing": [1, "always"],
    "brace-style": [1, "1tbs", { "allowSingleLine": false }],
    "camelcase": 1,
    "comma-spacing": [1, { "before": false, "after": true }],
    "comma-style": [1, "last"],
    "computed-property-spacing": [1, "never"],
    "consistent-this": [1, "self"],
    "eol-last": 1,
    "func-names": 1,
    "id-length": [1, { "min": 1, "max": 64 }],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "jsx-quotes": [1, "prefer-double"],
    "linebreak-style": 0,
    "lines-around-comment": [1, { "beforeBlockComment": true }],
    "max-depth": [1, 8],
    "max-len": [1, 132],
    "max-nested-callbacks": [1, 8],
    "max-params": [1, 8],
    "new-cap": 0,
    "new-parens": 1,
    "no-array-constructor": 1,
    "no-bitwise": 0,
    "no-continue": 0,
    "no-inline-comments": 0,
    "no-lonely-if": 0,
    "no-mixed-spaces-and-tabs": 1,
    "no-multiple-empty-lines": 1,
    "no-negated-condition": 0,
    "no-nested-ternary": 0,
    "no-new-object": 0,
    "no-plusplus": 0,
    "no-spaced-func": 1,
    "no-ternary": 0,
    "no-trailing-spaces": 1,
    "no-underscore-dangle": 0,
    "no-unneeded-ternary": 1,
    "object-curly-spacing": [1, "always"],
    "one-var": 0,
    "operator-assignment": [0, "never"],
    "operator-linebreak": [0, "after"],
    "padded-blocks": [0, "never"],
    "semi-spacing": [1, { "before": false, "after": true }],
    "semi": [2, "always"],
    "sort-vars": 0,
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, "always"],
    "space-in-parens": [1, "never"],
    "space-infix-ops": [1, { "int32Hint": true }],
    "space-unary-ops": 2,
    "spaced-comment": [1, "always"],
    "wrap-regex": 0,

    // ES6

    "arrow-body-style": 0,
    "arrow-parens": ["off", "always"],
    "arrow-spacing": [2, { "before": true, "after": true }],
    "constructor-super": 2,
    "generator-star-spacing": [2, "before"],
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-this-before-super": 2,
    "no-var": 1,
    "object-shorthand": ["off", "always"],
    "prefer-arrow-callback": 1,
    "prefer-spread": 1,
    "prefer-template": 1,
    "require-yield": 2,

    // Node.js

    "callback-return": [1, ["callback", "next"]],
    "global-require": 0,
    "handle-callback-err": 1,
    "no-mixed-requires": 1,
    "no-new-require": 0,
    "no-path-concat": 2,
    "no-process-exit": 2,
    "no-restricted-modules": 0,
    "no-sync": 1
  }
}
